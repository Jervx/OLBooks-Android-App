<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_BookInfo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/book_tit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gentium_book_basic"
            android:justificationMode="inter_word"
            android:lineHeight="24dp"
            android:text="..."
            android:textColor="@color/CoffeeBlack_900"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/gentium_book_basic_bold"
            android:justificationMode="inter_word"
            android:text="..."
            android:textColor="@color/CoffeeBlack_900"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cover_blur" />

        <ImageView
            android:id="@+id/cover_blur"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_java_programming_8th_edition_2015_joyce"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/gentium_book_basic_bold"
            android:text="Description"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/CoffeeBlack_900"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_more_desc" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/book_title">

            <TextView
                android:id="@+id/txtView_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/gentium_book_basic"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/CoffeeBlack_900"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/book_likes"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginEnd="20dp"
                android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
                android:fontFamily="@font/inter_semibold"
                android:text=""
                android:textAlignment="textEnd"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/book_saves"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:drawableRight="@drawable/ic_bookmark"
                android:fontFamily="@font/inter_semibold"
                android:text=""
                android:textAlignment="textEnd"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_view_more_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/gentium_book_basic"
            android:lineHeight="20dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/book_tit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/book_tit">

            <Button
                android:id="@+id/book_saves_btnText"
                android:layout_marginHorizontal="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_bookmark"
                android:drawableTint="@color/Bg"
                android:text="Save"
                android:fontFamily="@font/gentium_book_basic_bold" />

            <Button
                android:id="@+id/btn_startRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_remove_red_eye_24"
                android:drawableTint="@color/Bg"
                android:layout_weight="1"
                android:fontFamily="@font/gentium_book_basic_bold"
                android:text="Start Reading" />


        </LinearLayout>

        <ImageView
            android:id="@+id/cover"
            android:layout_width="408dp"
            android:layout_height="358dp"
            android:src="@drawable/apk_logo"
            app:layout_constraintBottom_toTopOf="@+id/book_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/apk_logo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>